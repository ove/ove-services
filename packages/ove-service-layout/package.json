{
  "name": "ove-service-layout",
  "description": "The layout service",
  "license": "MIT",
  "version": "0.1.0",
  "author": "Ovidiu Serban, o.serban@imperial.ac.uk",
  "homepage": "https://github.com/ove/ove-services#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ove/ove-services.git"
  },
  "bugs": {
    "url": "https://github.com/ove/ove-services/issues"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "DEBUG=layout:* node dist/index.js --color",
    "start:dev": "DEBUG=layout:* nodemon",
    "start:mockup": "json-server --watch mockup/routes.json --port 3004",
    "clean": "npx rimraf dist",
    "build": "npx babel-cli src --out-dir dist",
    "build:clean": "npm run clean && npm run build",
    "lint": "eslint src/**",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "debug": "^4.1.0",
    "express": "^4.16.3",
    "http-status-codes": "^1.3.0",
    "node-fetch": "^2.2.0",
    "underscore": "^1.9.1",
    "validate.js": "^0.12.0"
  },
  "devDependencies": {
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-2": "6.24.1",
    "eslint": "5.7.0",
    "eslint-plugin-jest": "21.26.2",
    "jest": "23.6.0",
    "jest-coverage-badges": "1.0.0",
    "json-server": "0.14.0",
    "nodemon": "1.18.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**.js",
      "!src/.eslintrc.js",
      "!src/index.js",
      "!src/routes/**.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text"
    ]
  }
}
